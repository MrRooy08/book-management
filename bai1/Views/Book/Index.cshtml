@model IEnumerable<bai1.Models.BookAuthors>
<div class="d-flex">
	<nav class="text-white" style="width: 350px; min-height: 100vh; border-right: 1px solid gray; background-color: bisque; padding: 1%;">
		<ul class="nav nav-fill flex-column gap-4">
			<li class="nav-item active">
				<button class="nav-link btn-nav" style="cursor: pointer; padding: 15px 0" data-bs-toggle="tab" data-bs-target="#dashboard" type="button">Dashboard</button>
			</li>
			<li class="nav-item">
				<button class="nav-link btn-nav" style="cursor: pointer; padding: 15px 0" data-bs-toggle="tab" data-bs-target="#book" type="button"> Book management</button>
			</li>
			<li class="nav-item">
				<button class="nav-link btn-nav" style="cursor: pointer; padding: 15px 0" data-bs-toggle="tab" data-bs-target="#order" type="button">Order Management</button>
			</li>
			<li class="nav-item">
				<button class="nav-link btn-nav" style="cursor: pointer; padding: 15px 0" data-bs-toggle="tab" data-bs-target="#user" type="button">User Management</button>

			</li>
			<li class="nav-item">
				<button class="nav-link btn-nav" style="cursor: pointer; padding: 15px 0" data-bs-toggle="tab" data-bs-target="#report" type="button">Report and Revenue</button>
			</li>
		</ul>
	</nav>

	<div class="tab-content p-4 flex-grow-1 container" style="max-width: 1000px;">
		<div class="tab-pane fade show active" id="dashboard">
			<h3>Dashboard</h3>
		</div>
		<div class="tab-pane fade" id="book">
			<h3>Book Management</h3>
			<div>
				<form method="post" action="/Book/AddBook" enctype="multipart/form-data">
					@* Hiển thị các bước sẽ cần thực hiện *@
					<div class="step-indicator d-flex mb-4">
						<div class="step-item active" id="indicator-1">1. Book information</div>
						<div class="step-item" id="indicator-2">2. Price & Inventory</div>
						<div class="step-item" id="indicator-3">3. Confirm</div>
					</div>

					@* Step 1 *@
					<div class="step active" id="step-1">
						<h3>Step 1: Book information </h3>
						<div class="upload-container">
							<label class="form-label">Book Cover</label>
							<div class="upload-zone">
								<div class="upload-preview" id="preview-area"></div>
								<input type="file" id="book-cover" name="Image" class="upload-zone__input" accept="image/*" hidden>
								<label for="book-cover" class="upload-zone__label">
									<div class="upload-zone__icon">
											☁️
									</div>
									<p class="upload-zone__text">
											<strong id="text-upload">Click to upload</strong> or drag and drop
									</p>
									<p class="upload-zone__hint">SVG, PNG, JPG (Max. 800x1200px)</p>
								</label>
							</div>
						</div>
						<div class="mt-3">
							<label for="ISBN" class="form-label">ISBN <span style="color: red;">*</span> </label>
							<input type="text" id="ISBN" name="ISBN" maxlength="13" class="form-control required-field" />
						</div>
						<div class="mt-3">
							<label for="productTitle" class="form-label">Product title: <span style="color: red;">*</span></label>
							<input type="text" id="productTitle" name="Title" class="form-control required-field" />
						</div>
						<div class="form-group mt-3">
							<label for="authors" class="form-label">Authors <span style="color: red;">*</span> </label>
							<div>
								<input type="text" id="AuthorSearch" class="form-control" placeholder="Please type the author's name"/>
								<div id="AuthorSuggestions"
									 class="list-group  w-100"
									 style="top: 100%; left: 0; z-index: 1; display: none;">
								</div>
							</div>
							<input type="hidden" id="AuthorIds" name="AuthorIds" class="required-field" />
						</div>

						<div class="mt-3">
							<label for="publishDate" class="form-label">Publish date:<span style="color: red;">*</span> </label>
							<input type="date" id="publishDate" class="form-control required-field" name="PublishDate" />
						</div>
						<div style="display:flex; justify-content: space-between; ">
							<div>
								<label class="form-label" for="length">Dimensions (L x W x H)</label>
								<div class="dimensions-wrapper">
									<input type="number" class="form-input dimensions-input" id="length" placeholder="L" name="Length">
									<span class="dimensions-separator">&times;</span>
									<input type="number" class="form-input dimensions-input" id="width" placeholder="W" name="Width">
									<span class="dimensions-separator">&times;</span>
									<input type="number" class="form-input dimensions-input" id="height" placeholder="H" name="Height">
									<span class="dimensions-unit">cm</span>
								</div>
							</div>
							<div>
								<label class="form-label" for="weight">Weight</label>
								<div class="input-group">
									<input type="number" id="weight" class="form-input" placeholder="0" name="Weight">
									<span class="input-group-text">gram</span>
								</div>
							</div>
						</div>
						<div class="form-group">
							<label class="form-label" for="language">Language</label>
							<div class="select-wrapper">
								<select id="language" class="form-select" name="Language">
									<option value="vi">Vietnamese</option>
									<option value="en">English</option>
								</select>
								<span class="select-arrow"></span>
							</div>
						</div>
						<div class="form-group">
							<label class="form-label" for="format">Format</label>
							<div class="select-wrapper">
								<select id="format" class="form-select" name="Format">
									<option value="paperback">Paperback (Bìa mềm)</option>
									<option value="hardcover">Hardcover (Bìa cứng)</option>
									<option value="ebook">Ebook</option>
								</select>
								<span class="select-arrow"></span>
							</div>
						</div>						
						<div class="mt-3">
								<label for="PageCount" class="form-label">PageCount: </label>
								<input type="number" id="PageCount" class="form-control" name="PageCount" />
						</div>
						<div class="mt-3">
							<label for="Description" class="form-label">Description: </label>
							<input type="text" id="Description" class="form-control" name="Description" />
						</div>
						<div class="text-end mt-3"> 
							<button type="button" class="btn btn-primary" onclick="nextStep()">Next</button>
						</div>
					</div>

					@* Step 2 *@
					<div class="step" id="step-2">
						<h3>Step 2: Price & Inventory </h3>
						<div class="mb-3">
							<label>Cost Price </label>
							<input type="number" id="costprice" name="CostPrice"
								class="form-control required-field" min="0"
								placeholder="Please type a cost price book from Supplier" />
						</div>	

						<div class="mb-3">
							<label>List Price </label>
							<input type="number" id="listprice" name="ListPrice"
								class="form-control required-field" min="0"
								placeholder="Please type a list price book" />
						</div>


						<div class="mb-3">
							<label>Sale Price </label>
							<input type="number" id="saleprice" name="SalePrice"
								class="form-control required-field" min="0"
								placeholder="Please type a sale price book" />
						</div>

						<div class="mb-3">
							<label> Inventory </label>
							<input type="number" id="inventory" name="Inventory"
								class="form-control required-field" min="0" placeholder="Please type inventory of book"/>
						</div>

						<button type="button" class="btn btn-secondary" onclick="prevStep()">Previous</button>
						<button type="button" class="btn btn-primary" onclick="nextStep()">Next</button>
					</div>

					@* Step 3 *@
					<div class="step" id="step-3">
						<h3 class="mb-4"> Step 3: Confirm </h3>
						<p>Check the information again before completion</p>
						<div class="form-check form-switch">
							<h3>Publish Now ?</h3>
							<label for="publishNow" class="form-check-label"> Publish this book </label>
							<input class="form-check-input"
							type="checkbox" id="PublishNow" name="PublishNowRawOk" />
						</div>

						<button type="button" class="btn btn-secondary" onclick="prevStep()"> Back </button>
						<button type="submit" class="btn btn-success">Finish</button>
					</div>
				</form>
			</div>
		</div>
		<div class="tab-pane fade" id="order" >
			<h3>Order Management</h3>
		</div>
		<div class="tab-pane fade" id="user">
			<h3>User Management</h3>
		</div>
		<div class="tab-pane fade" id="report">
			<h3>Report and Revenue</h3>
		</div>
	</div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/bookAdmin.js" asp-append-version="true"></script>