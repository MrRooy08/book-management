@model IEnumerable<bai1.Models.BookAuthors>

<div class="d-flex">
	<nav class="bg-dark text-white p-3" style="width: 250px; min-height: 100vh">
		<h2 class="text-center mb-4">Admin Panel</h2>
		<ul class="nav nav-fill flex-column">
			<li class="nav-item active">
				<button class="nav-link" style="cursor: pointer;" data-bs-toggle="tab" data-bs-target="#dashboard" type="button">Dashboard</button>
			</li>
			<li class="nav-item">
				<button class="nav-link" style="cursor: pointer;" data-bs-toggle="tab" data-bs-target="#product" type="button"> Product management</button>
			</li>
			<li class="nav-item">Order management
				<button class="nav-link" style="cursor: pointer;" data-bs-toggle="tab" data-bs-target="#order" type="button">Order Management</button>
			</li>
			<li class="nav-item">User management

			</li>
			<li class="nav-item">Report and Revenue

			</li>
		</ul>
	</nav>

	<div class="tab-content p-4 flex-grow-1">
		<div class="tab-pane fade show active" id="dashboard">
			<h3>Dashboard</h3>
		</div>
		<div class="tab-pane fade" id="product">
			<h3>Product management</h3>
			<div>
				@* Hiển thị các bước sẽ cần thực hiện *@
				<div class="step-indicator d-flex mb-4">
					<div class="step-item active" id="indicator-1">1. Product information</div>
					<div class="step-item" id="indicator-2">2. Price & Inventory</div>
					<div class="step-item" id="indicator-3">3. Confirm</div>
				</div>

				@* Step 1 *@
				<div class="step active" id="step-1">
					<h3>Step 1: Product information </h3>
					<div class="mt-3">
						<label for="ISBN" class="form-label">ISBN <span style="color: red;">*</span> </label>
						<input type="text" id="ISBN" maxlength="13" class="form-control" />
					</div>
					<div class="mt-3">
						<label for="productTitle" class="form-label">Product title: <span style="color: red;">*</span></label>
						<input type="text" id="productTitle" class="form-control" />
					</div>
					<div class="form-group mt-3">
						<label for="authors" class="form-label">Authors <span style="color: red;">*</span> </label>
						<div class=" position-relative ">
							<input type="text" id="AuthorSearch" class="form-control" placeholder="Please type the author's name"/>
							<div id="AuthorSuggestions"
								 class="list-group position-absolute w-100"
								 style="top: 100%; left: 0; z-index: 1; display: none;">
							</div>
						</div>
						<input type="hidden" id="AuthorId" name="AuthorId" />
					</div>

					<div class="mt-3">
						<label for="publishDate" class="form-label">Publish date:<span style="color: red;">*</span> </label>
						<input type="date" id="publishDate"  class="form-control" />
					</div>
					<div class="mt-3">
						<label for="Description" class="form-label">Description: </label>
						<input type="text" id="Description" class="form-control" />
					</div>
					<div class="text-end mt-3"> 
						<button class="btn btn-primary" onclick="nextStep()">Next</button>
					</div>
					@* <div class="mt-3">
						<label for="Description" class="form-label">Description: </label>
						<input type="text" id="Description" class="form-control" />
					</div> *@
				</div>

				@* Step 2 *@
				<div class="step" id="step-2">
					<h3>Step 2: Price & Inventory </h3>

					<div class="mb-3">
						<label>Price </label>
						<input type="number" id="price" class="form-control" />
					</div>

					<div class="mb-3">
						<label> Inventory </label>
						<input type="number" id="inventory" class="form-control" />
					</div>

					<button class="btn btn-secondary" onclick="prevStep()">Previous</button>
					<button class="btn btn-primary" onclick="nextStep()">Next</button>
				</div>

				@* Step 3 *@
				<div class="step" id="step-3">
					<h3 class="mb-4"> Step 3: Confirm </h3>
					<p>Check the information again before completion</p>

					<button class="btn btn-secondary" onclick="prevStep()"> Back </button>
					<button class="btn btn-success">Finish</button>
				</div>

			</div>
		</div>
		<div class="tab-pane fade" id="order" >
			<h3>Order management</h3>
		</div>
		<div class="tab-pane fade">
			<h3>User management</h3>
		</div>
	</div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/bookAdmin.js" asp-append-version="true"></script>