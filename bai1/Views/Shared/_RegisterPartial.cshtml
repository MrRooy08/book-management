@model bai1.Models.RegisterModel

<div id="modalLabel">
    <div class="modal-header">
        <h5 class="modal-title" >Register</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <form class="auth-form" asp-controller="Account" asp-action="Register" method="post">

            <div class="mb-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label asp-for="Username" class="form-label">Username<span class="text-danger"> *</span></label>
                <input asp-for="Username" class="form-control" required />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email<span class="text-danger"> *</span></label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="BirthDate" class="form-label">Date of birth<span class="text-danger"> *</span></label>
                <input asp-for="BirthDate" class="form-control" required />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password<span class="text-danger"> *</span></label>
                <input asp-for="Password" class="form-control" type="password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password<span class="text-danger"> *</span></label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <input type="submit" value="Submit" class="btn btn-primary" />
        </form>
        <div class="d-flex mt-3 gap-3 ">
                <p style="color: gray; ">Already have account ? </p>
                <button id="loginBtn">Sign In</button>
            </div>
    </div>
</div>
